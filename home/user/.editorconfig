root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4

[*.{cpp,h}]
indent_size = 2
tab_width = 2

[Makefile]
indent_style = tab
indent_size = tab
tab_width = 4

[*.go]
indent_style = tab

[*.tsx]
indent_style = space
indent_size = 2
tab_width = 2
